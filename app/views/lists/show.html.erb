<h1 style="color: black;"><%= @list.name %></h1>
<%= link_to "Add movie",  new_list_bookmark_path(@list), class: "btn btn-dark" %>

<ul>
  <% @list.bookmarks.each do |bookmark| %>
    <li>
      <h3><%= bookmark.movie.title %></h3>
      <p><%= bookmark.comment %></p>
      <p><%= bookmark.movie.overview %></p>
      <%= image_tag bookmark.movie.poster_url, width: 200 %>
      <%= link_to "Remove movie",
            bookmark_path(bookmark),
            method: :delete,
            data: { confirm: "Are you sure to delete #{bookmark.movie.title}?" } %>
    </li>

  <% end %>
</ul>


